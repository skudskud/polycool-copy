{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "telegram-bot-v2/py-clob-server",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn app:app --host 0.0.0.0 --port 8080",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "region": "us-east1",
    "healthchecks": {
      "memory": {
        "ram": 512,
        "timeout": 10
      }
    },
    "readinessProbe": {
      "path": "/health",
      "port": "$PORT",
      "initialDelaySeconds": 30,
      "timeoutSeconds": 15,
      "periodSeconds": 10,
      "successThreshold": 1,
      "failureThreshold": 5
    }
  }
}
