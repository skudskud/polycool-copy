{
  "name": "Poller",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "apps/subsquid-silo-tests/Dockerfile",
    "context": "apps/subsquid-silo-tests"
  },
  "deploy": {
    "startCommand": "python -m src.polling.poller",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
